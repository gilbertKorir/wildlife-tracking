{{#partial "content"}}
    <div class="container-fluid" style="background-color: white;">
        <div class="row">
            <div class="col-md-4 pb-2 pt-2">
                {{#if locations}}
                    {{#each locations as |l|}}
                        <div class="entries pb-2 bg-success">
                            <p class="text" id={{l.id}}>Location: {{l.name}}</p><br>
                            <a href="/view/location/sightings/{{id}}"><button class="btn btn-primary btn-md">Sightings</button></a>
                        </div>
                        <br>
                    {{/each}}
                {{else}}
                    <p class="text display-4">There are no locations! Create some <a href="/create/location">here</a></p>
                {{/if}}
            </div>
            {{#if sightings}}
            <div class="col-md-8">

                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h1 class="card-title">Sightings</h1>
                        <hr>
                        <div class="col-md-2">
                            <h3>Time</h3>
                            <hr>
                            {{#each sightings as |s|}}
                                <li class="card-text ">{{s}}</li>
                            {{/each}}
                        </div>
                        <div class="col-md-2">
                            <h3>Animal</h3>
                            <hr>
                            {{#each animals as |a|}}
                                <li class="card-text ">{{a}}</li>
                            {{/each}}
                        </div>
                        <div class="col-md-2">
                            <h3>Type</h3>
                            <hr>
                            {{#each types as |t|}}
                                <li class="card-text ">{{t}}</li>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{else}}
<!--                <h3>No Sightings in this location</h3>-->
            {{/if}}

        </div>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}
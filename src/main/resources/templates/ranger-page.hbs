{{#partial "content"}}
    <div class="container-fluid" style="background-color: white;">
        <div class="row">
            <h3 class="pt-3">Rangers</h3>
            <hr>
            <div class="col-md-4 pt-2 pb-2">
                {{#if rangers}}
                    {{#each rangers as |r|}}
                        <div class="entries bg-success pb-2">
                            <p class="text">Ranger: {{r.name}}</p><br>
                            <p class="text">Phone number: {{r.badge_number}}</p><br>
                            <p class="text">Badge number: {{r.phone_number}}</p><br>
                            <a href="/view/ranger/sightings/{{r.id}}" class="mb-3"><button class="btn btn-primary btn-md">Sightings</button></a>
                        </div>
                        <br>
                    {{/each}}
                {{else}}
                    <p class="text display-4">There are no rangers! Create some <a href="/create/ranger">here</a></p>
                {{/if}}
            </div>
            <div class="col-md-8">
                {{#if sightings}}
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h1 class="card-title">Sightings</h1>
                            <hr>
                            <div class="col-md-4">
                                <h3>Time</h3>
                                <hr>
                                {{#each sightings as |s|}}
                                    <li class="card-text ">{{s.time}}</li>
                                {{/each}}
                            </div>
                            <div class="col-md-4">
                                <h3>Animal</h3>
                                <hr>
                                {{#each animals as |a|}}
                                    <li class="card-text ">{{a}}</li>
                                {{/each}}
                            </div>
                            <div class="col-md-4">
                                <h3>Type</h3>
                                <hr>
                                {{#each types as |t|}}
                                    <li class="card-text ">{{t}}</li>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}